<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIcon?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>


<StackPane fx:id="parentContainer" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sgp.controllers.LoginController">
   <children>
      <AnchorPane id="AnchorPane" fx:id="window" prefHeight="291.0" prefWidth="417.0" styleClass="root" stylesheets="@../css/login.css">
         <children>
            <Label layoutX="169.0" layoutY="13.0" text="SGP" textFill="#f2f2f2">
               <font>
                  <Font name="Roboto Slab Bold" size="36.0" />
               </font>
            </Label>
            <FontAwesomeIcon fill="WHITE" glyphName="USER" layoutX="42.0" layoutY="119.0" size="2em" />
            <TextField fx:id="txtUser" layoutX="41.0" layoutY="94.0" onAction="#Login" prefHeight="32.0" prefWidth="319.0" promptText="Username" style="-fx-text-fill: white;" styleClass="inputs">
               <font>
                  <Font name="Roboto" size="20.0" />
               </font>
            </TextField>
            <FontAwesomeIcon fill="WHITE" glyphName="LOCK" layoutX="43.0" layoutY="191.0" size="2em" />
            <PasswordField fx:id="txtPass" layoutX="43.0" layoutY="165.0" onAction="#Login" prefHeight="32.0" prefWidth="319.0" promptText="Password" styleClass="inputs">
               <font>
                  <Font name="Roboto" size="20.0" />
               </font>
            </PasswordField>
            <Button fx:id="btnLogin" layoutX="141.0" layoutY="221.0" mnemonicParsing="false" onAction="#Login" prefHeight="42.0" prefWidth="133.0" styleClass="btnLogin" text="Login" textFill="WHITE">
               <font>
                  <Font name="Roboto Bold" size="18.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </AnchorPane>
   </children>
</StackPane>
